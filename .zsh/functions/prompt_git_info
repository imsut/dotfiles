if [ -n "$__CURRENT_GIT_BRANCH" ]; then
    local branch="$__CURRENT_GIT_BRANCH"
    local color
    if [ -n "$__CURRENT_GIT_BRANCH_IS_DIRTY" ]; then
        color="%{${fg[white]}%}%{${bg[red]}%}"
    else
        color="%{${fg[red]}%}"
    fi
 
    printf " br=%s%s%%{${fg[default]}%%}%%{${bg[default]}%%};" $color $branch
fi
